{{ form_start(form, {'attr': {'class': 'row g-3', 'data-action': 'asset#new'}}) }}
<div class="col-12 col-md-8">
    {{ form_label(form.type, 'Tipo', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
</div>

<div class="col-12 col-md-4">
    {{ form_label(form.value, 'Valor', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.value, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="col-12 text-end">
    <button type="submit" class="btn btn-sm btn-{{ button_class|default('success') }} text-white">
        {{ button_label|default('Crear') }}
    </button>
</div>
{{ form_end(form) }}
