{% extends 'layout.html.twig' %}

{% block title %}Pases{% endblock %}

{% block bread %}
    <li class="breadcrumb-item d-flex justify-content-start align-items-center">
        <a href="{{ path('admin') }}" class="pr-md-3 pl-md-2 pr-2 pl-1">Administraci&oacute;n</a>
    </li>
    <li class="breadcrumb-item active">Pases</li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">PASES</div>
                <div class="card-body p-0">
                    <table class="table table-striped m-0">
                        <thead>
                        <tr>
                            <th class="text-center">#</th>
                            <th>Fecha</th>
                            <th>Cliente</th>
                            <th>Price</th>
                            <th class="text-center">Cup&oacute;n</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for ticket in tickets %}
                            <tr>
                                <th class="text-center">{{ ticket.id }}</th>
                                <td>{{ ticket.createdAt|date('d M, Y') }}</td>
                                <td>{{ ticket.client.name }}</td>
                                <td>{{ ticket.price|money|format_currency('USD') }}</td>
                                <td class="text-center">
                                    {{ ticket.coupon ? ticket.coupon.code : '---' }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
