{% extends 'base.html.twig' %}

{% block title %}Asset{% endblock %}

{% block body %}
    <h1>Asset</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ asset.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ asset.createdAt ? asset.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>LastMovementAt</th>
                <td>{{ asset.lastMovementAt ? asset.lastMovementAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ asset.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ asset.name }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ asset.category }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ asset.price }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ asset.cost }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_asset_index') }}">back to list</a>

    <a href="{{ path('app_asset_edit', {'id': asset.id}) }}">edit</a>

    {{ include('asset/_delete_form.html.twig') }}
{% endblock %}
